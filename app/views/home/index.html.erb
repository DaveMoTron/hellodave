<% content_for :head_block do %>
  <%= stylesheet_link_tag    'home', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<%= render partial: 'layouts/nav' %>

<div id='homepage'>
  <section id="section-one" class="homepage-section">
    <%= image_tag 'spider-web.svg', id: 'spiderweb' %>
    <%= image_tag 'spider.png', id: 'spider' %>
    <div class='dashed-line one'></div>
    <div class="content-wrapper">
      <div class='copy'>
        <h1 class="main-title">
          Dave Cruikshank <span class="subtitle">Web Design & Development</span></h1>
        <p class="body">I'm a designer, developer, illustrator & photographer from Australia.</p>
        <p class="body">We have lots of spiders here, I think they're pretty cute.</p>
      </div>
    </div>
  </section>
  <section id="section-two" class="homepage-section">
    <div class='dashed-line one'></div>
      <div class='dashed-line two'></div>
      <div class='dashed-line three'></div>
      <div class='dave-image-wrapper'>
        <div class='dave-image'></div>
        <h3 class='dave-image__title'>
          Me in India. <span>Also a monkey.</span>
        </h3>
      </div>
    <div class="content-wrapper">
      <article class='about-me'>
        <div class='copy'>
          <h3>About me</h3>
          <p>I am an 8 year veteran in web design & development. I have a bachelor of visual communication from the University of South Australia. I enjoy writing beautiful code as much as I love crafting elegant designs. I have worked with some of Australia's biggest corporations, including the ABC and Qantas.</p>
          <p>I'm very passionate about animal rights and social liberties. In my spare time I dig travel, motorcycle riding, surfing, photography, camping, yoga, volleyball, & lots of other stuff.</p>
        </div>
        <%= image_tag 'about-me-icons.png', class: 'about-me__icons' %>
      </article>
    </div>
  </section>
  <section id="section-three" class="homepage-section">
    <div class="content-wrapper">
      <div class='dashed-line one'></div>
      <div class='dashed-line two'></div>
      <div class='dashed-line three'></div>
      <div class='copy'>
        <h3>
          My skills include
          <span>( But are not limited to )</span>
        </h3>
        <ul>
          <li><span>HTML5</span><em>/</em>HAML, SLIM and more</li>
          <li><span>CSS3</span><em>/</em>SASS, LESS and more</li>
          <li><span>Javascript</span><em>/</em>Vanilla, JQuery</li>
          <li><span>Ruby & Rails</span><em>/</em>Front-end focus</li>
          <li><span>Graphic Design</span><em>/</em>Adobe Creative Suite</li>
          <li><span>UX Design</span><em>/</em>Redpen, UXPin</li>
          <li><span>Illustration</span><em>/</em>Procreate</li>
          <li><span>Photography</span></li>
          
        </ul>
      </div>
      
    </div>
  </section>

  <section id="section-four" class="homepage-section portfolio">
    <div class='dashed-line one'></div>
    <div class='portfolio-section'>
      <div class='portfolio-slider'>
        <div class='portfolio-slide businest' data-name='Businest' data-href='https://businest.com'>
          <%= image_tag('businest-a.jpg') %>
        </div>
        <div class='portfolio-slide businest' data-name='Businest' data-href='https://businest.com'>
          <%= image_tag('businest-b.jpg') %>
        </div>
        <div class='portfolio-slide businest'>
          <%= image_tag('businest-c.png') %>
        </div>
        <div class='portfolio-slide businest'>
          <%= image_tag('businest-d.jpg') %>
        </div>
        <div class='portfolio-slide businest'>
          <%= image_tag('businest-e.jpg') %>
        </div>
        <div class='portfolio-slide sterling'>
          <%= image_tag('sterling-a.jpg') %>
        </div>
        <div class='portfolio-slide sterling'>
          <%= image_tag('sterling-b.jpg') %>
        </div>
        <div class='portfolio-slide sterling'>
          <%= image_tag('sterling-c.jpg') %>
        </div>
        <div class='portfolio-slide sterling'>
          <%= image_tag('sterling-d.jpg') %>
        </div>
        <div class='portfolio-slide sterling'>
          <%= image_tag('sterling-e.jpg') %>
        </div>
        <div class='portfolio-slide sterling'>
          <%= image_tag('sterling-f.jpg') %>
        </div>
        <div class='portfolio-slide petrescue'>
          <%= image_tag('petrescue-a.jpg') %>
        </div>
        <div class='portfolio-slide petrescue'>
          <%= image_tag('petrescue-b.jpg') %>
        </div>
        <div class='portfolio-slide petrescue'>
          <%= image_tag('petrescue-c.jpg') %>
        </div>
        <div class='portfolio-slide petrescue'>
          <%= image_tag('petrescue-d.jpg') %>
        </div>
      </div>
      <div class="swipe-icon"></div>
      <div class='slide-title'>
        <%= link_to "Businest", "https://businest.com", class: 'project-website-link slide-link' %>
      </div>
    </div>
  </section>

  <section id="section-five" class="homepage-section">
    <div class='dashed-line one'></div>
    <div class='content-wrapper'>
      <div class='copy'>
        <h2 class='title'>Like what you see?<span class='subtitle'>Drop me a line!</span></h2>
        <ul class='social'>
          <!-- <li><%= link_to "@davemotron", "#", class: 'social__link twitter' %></li> -->
          <li><%= link_to "LinkedIn", "https://www.linkedin.com/in/dave-cruikshank", class: 'social__link linkedin' %></li>
          <li><%= link_to "Phone (click to show)", "#", class: 'social__link phone hidden' %></li>
          <li><%= link_to "Email (click to show)", "#", class: 'social__link email hidden' %></li>
        </ul>
      </div>
    </div>
    <div class='daisies-divider'>
      <div class='daisy'>
        <%= image_tag "d-stem.png", class: 'stem' %>
        <%= image_tag "d-petals.png", class: 'petals' %>
        <%= image_tag "d-eyeball.png", class: 'eyeball' %>
        <%= image_tag "d-face.png", class: 'face' %>
      </div>
    </div>
    
  </section>
</div>

<% content_for :bottom_of_page do %>
  
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
  <%= javascript_include_tag "//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js", 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag "home.js", 'data-turbolinks-track': 'reload' %>
<% end %>